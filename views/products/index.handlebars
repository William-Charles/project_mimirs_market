<header class="page-header">
  <h1>Products</h1>

  <form class="form-inline" action="/products/search" method="get">
    <div class="form-group">
      <label for="search">Search</label>
      <input type="text" class="form-control" name="search" id="search">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
  </form>
  
  <br>

  <form class="form-inline" action="/products/sort" method="get">
    <div class="form-group">
      <label for="sortSelect">Sort by</label>
      <select class="form-control" name="sort" id="sortSelect">
        <option value="">Default</option>
        <option value="price">Price Asc</option>
        <option value="priceDesc">Price Desc</option>
        <option value="name">Name Asc</option>
        <option value="nameDesc">Name Desc</option>
        <option value="created">Newest First</option>
        <option value="createdDesc">Oldest First</option>
      </select>
    </div>
     <button type="submit" class="btn btn-primary">Submit</button>
   </form>
</header>


{{#if products.length }}
  <div class="row">
    {{#each products as |product| }}
      <div class="col-sm-4">
        <div class="thumbnail">
          <div>
            <a href="/categories/{{ product.Category.id }}">
              {{product.Category.name}}
            </a>
          </div>
          <a href="/products/{{ product.id }}">
            <img src="http://i.imgur.com/qK42fUu.jpg">
            <h6>{{product.name}} - {{product.price}}</h6>
          </a>
				</div>
      </div>
    {{/each }}
  </div>


{{else }}
  <p class="text-danger">No products</p>
{{/if }}
